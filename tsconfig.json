{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "types": [
      "vite/client"
    ]
  }
}